{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",

        "strict": false,
        "removeComments": true,
        "checkJs": false,
        "allowJs": false,

        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",

        "rootDir": "./@rockwrap",
        "outDir": "./@rockwrap-dist",

        "declaration": true
    },

    "include": [
        "@rockwrap/minecraft.ts",
        "@rockwrap/discord.ts",
        "@rockwrap/config.ts"
    ],

    "exclude": [
        "@rockwrap-dist",
        "node_modules",
        "public",
        "docs",
    ]
}